package myevents

import (
	"github.com/go-chi/chi/v5"
	"net/http"
	"log/slog"
	"database/sql"
	"github.com/Regncon/conorganizer/layouts"
	"github.com/Regncon/conorganizer/service/userctx"
)

func myeventsLayoutRoute(router chi.Router, db *sql.DB, eventImageDir *string, logger *slog.Logger) {
	router.Get("/", func(w http.ResponseWriter, r *http.Request) {
		var ctx = r.Context()
		userId := userctx.GetUserRequestInfo(r.Context()).Id
		layouts.Base(
			"My Events",
			userctx.GetUserRequestInfo(ctx),
			myeventsIndex(userId, db, eventImageDir, logger),
		).Render(ctx, w)
	})
}

templ myeventsIndex(userid string, db *sql.DB, eventImageDir *string, logger *slog.Logger) {
	<div id="my-events-wrapper" data-init={ "@get('/my-events/api',{requestCancellation: 'disabled'})" }>
		@myEventsPageContent(userid, db, eventImageDir, logger)
	</div>
}
