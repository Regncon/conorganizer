{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"sourceMap": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"downlevelIteration": true,
		"target": "ES2022",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"$*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".eslintrc.cjs", ".next.config.mjs"],
	"exclude": ["node_modules"]
}
