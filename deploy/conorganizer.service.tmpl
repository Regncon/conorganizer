[Unit]
Description=Conorganizer (%SAFE_NAME%)
After=network.target

[Service]
User=deploy
Group=www-data
WorkingDirectory=/opt/conorganizer/%SAFE_NAME%

Environment=PORT=%PORT%

ExecStart=/opt/conorganizer/%SAFE_NAME%/conorganizer \
  -dbp /mnt/HC_Volume_103911252/database/events.db \
  -image-path /mnt/HC_Volume_103911252/event-images

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
